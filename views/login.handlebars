<div class="title text-center mar-vert-md">
  <h1>Log In</h1>
  <h2>Help up making our world better, for free!</h2>
</div>

{{> _errorMessage}}

<form class="form-fields" action="/login" method="post">
  <!-- hidden input for csrf token -->
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="mar-vert-sm">
    <h4 class="mar-xs">Email Address</h4>
    <input type="text" name="email" placeholder="john.doe@mail.com">
  </div>
  <div class="mar-vert-sm">
    <h4 class="mar-xs">Password</h4>
    <input type="password" name="password" placeholder="password">
  </div>
<button class="block-center mar-vert-sm btn btn-darkblue" type="submit">LOG IN</button>
</form>

<div class="text-center mar-lg">
  <h2 class="mar-vert-sm">If you are not a member, please</h2>
  <a class="btn btn-darkblue" href="/register">SIGN UP</a>
</div>
