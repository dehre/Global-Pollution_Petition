<div class="title text-center mar-vert-md">
  <h1>Change your password</h1>
</div>

{{> _errorMessage}}

<form class="form-fields" action="/profile/edit/password" method="post">
  <!-- hidden input for csrf token -->
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="mar-vert-sm">
    <h4 class="mar-xs">Old Password</h4>
    <input type="password" name="oldPsw">
  </div>
  <div class="mar-vert-sm">
    <h4 class="mar-xs">New Password</h4>
    <input type="password" name="newPsw">
  </div>
  <div class="mar-vert-sm">
    <h4 class="mar-xs">New Password Again</h4>
    <input type="password" name="newPswAgain">
  </div>
  <button class="block-center mar-vert-sm btn btn-darkblue" type="submit">UPDATE</button>
</form>

<div class="text-center mar-lg">
  <h2 class="mar-vert-sm">Return back without changing</h2>
  <a class="btn btn-darkblue" href="/profile/edit">RETURN</a>
</div>
